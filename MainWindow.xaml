<Window x:Class="ticksy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ticksy"
        mc:Ignorable="d" ResizeMode="NoResize" 
        Title="MainWindow" Height="450" Width="800" Loaded="Window_OnLoaded">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Name="btnExit" Header="Exit" Click="btnExit_Click" />
            </MenuItem>
            <MenuItem Header="Developer">
                <MenuItem Header="Create Invoice" Click="btnCreateInvoice_Click" />
                <MenuItem Header="Create Project" Click="btnCreateProject_Click" />
                <MenuItem Name="MIFocusTimer" Header="Open Focus Entry Timer" Click="MIFocusTimer_OnClick"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Name="menuAbout" Header="About" Click="menuAbout_Click" />
            </MenuItem>
        </Menu>
        <Button x:Name="btnLogin" Content="Login" Width="120" Height="36" Click="btnLogin_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,210,0,0" />
    </Grid>
</Window>
