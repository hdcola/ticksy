<Window x:Class="ticksy.Dialogs.AboutDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ticksy.Dialogs"
        mc:Ignorable="d"
        Title="AboutDlg" Height="350" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="16" FontWeight="Bold" Text="Ticksy"/>
            <TextBlock x:Name="VersionTextBlock" FontSize="14" Margin="0,10"/>
            <TextBlock FontSize="14" Text="Developed by Tamara, Danny, Iana"/>
            <TextBlock FontSize="12" Margin="0,10" Text="The world is a better place because of you."/>
            <Button Content="Close" Width="100" Margin="10" HorizontalAlignment="Center" Click="CloseButton_Click"/>
            <!--<Button x:Name="btnAdd" Content="Add" Click="btnAdd_Click" Width="100" Height="36" />
            <TextBlock Name="txtCount"  Text="0" Height="36"/>-->
        </StackPanel>
    </Grid>
</Window>
